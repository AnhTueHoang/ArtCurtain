<h1> New Record</h1>
<form action="/review" method="post">
<table>
    <tr> <td> Customer ID: </td> <td> <input type="number" name="customer_id" required> </td> </tr>
    <tr> <td> Product ID: </td> <td> <input type="number" name="product_id" required> </td> </tr>
    <tr> <td> Review Date: </td> <td> <input type="date" name="reviewdate"></input> </td> </tr>
    <tr> <td> Comments: </td> <td> <textarea name="comments" rows="10" cols="30"
    placeholder="Comments"></textarea> </td> </tr>
    <tr> <td> Rating: </td> <td> <input type="number" name="rating"></input> </td> </tr>
    <tr> <td> Status: </td> <td> <select name="status" required>
        <option selected disabled>Choose Status</option>
        <option>Publish</option>
        <option>Unpublish</option>
        <option>On Hold</option>
        </select> </td> </tr>
</table>
<button type="submit">Save</button>
